<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.tencent.qcloud.tim.uikit.modules.chat.ChatLayout
        android:id="@+id/chat_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/llhuati"
            android:layout_gravity="bottom"
            android:visibility="gone"
            android:background="@color/white"
            android:padding="12dp"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:minHeight="182dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="保存至"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/imGuanbi"
                    android:padding="5dp"
                    android:src="@mipmap/guanbi"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/etHuati"
                    android:hint="添加话题分类"
                    android:textColor="@color/txt_33"
                    android:textSize="13sp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/guigexuanzefalse"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"/>
                <TextView
                    android:id="@+id/tvWancheng"
                    android:text="完成"
                    android:textSize="14sp"
                    android:textColor="@color/txt_33"
                    android:gravity="center"
                    android:layout_marginLeft="22dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <TextView
                android:text="已有话题"
                android:layout_marginTop="22dp"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/tagFlow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>



    <LinearLayout
        android:id="@+id/llHuanti"
        android:gravity="right"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:background="#CCCCCC"
            android:layout_width="95dp"
            android:layout_height="match_parent"/>

    </LinearLayout>
</RelativeLayout>
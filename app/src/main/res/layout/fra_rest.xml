<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="34dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <TextView
       android:text="切换手机号登录"
       android:textSize="20sp"
       android:textColor="@color/txt_lv8"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="14dp"
        android:text="登录即表明同意《用户协议》《隐私政策》"
        android:textSize="12sp"
        android:textColor="@color/main_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="37dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:text="+86"
            android:background="#F6F6F6"
            android:layout_width="44dp"
            android:layout_height="23dp"/>
        <EditText
            android:layout_marginLeft="10dp"
            android:hint="请输入手机号"
            android:textColor="@color/txt_66"
            android:textSize="14sp"
            android:background="@null"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <View
        android:layout_marginTop="15dp"
        android:background="#F2F2F2"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/etcode"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@null"
            android:maxLength="20"
            android:hint="请输入验证码"
            android:inputType="textPassword"
            android:padding="12dp"
            android:singleLine="true"
            android:textColor="#FF8B8C91"
            android:textColorHint="#FF8B8C91"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tvgetcode"
            android:gravity="center"
            android:textColor="#FF2121"
            android:textSize="13sp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="获取验证码"
            android:background="@drawable/bg_border_e71919_50dp"
            android:layout_width="wrap_content"
            android:layout_height="31dp"/>
    </LinearLayout>
    <View
        android:background="#F2F2F2"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:layout_marginTop="20dp"
        android:text="未注册的手机号验证后将自动注册"
        android:textSize="12sp"
        android:textColor="@color/txt_99"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
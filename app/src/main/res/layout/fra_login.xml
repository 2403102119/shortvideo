<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="32dp"
    android:paddingRight="34dp"
    android:paddingTop="30dp"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
         <com.makeramen.roundedimageview.RoundedImageView
             android:src="@mipmap/logo"
             app:riv_corner_radius="15dp"
             android:layout_gravity="center_horizontal"
             android:layout_width="92dp"
             android:layout_height="92dp"/>
        <TextView
            android:text="秀评"
            android:textColor="@color/txt_33"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="37dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:text="+86"
                android:background="#F6F6F6"
                android:layout_width="44dp"
                android:layout_height="23dp"/>
            <EditText
                android:id="@+id/etPhone"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:hint="请输入手机号码"
                android:textColor="@color/txt_66"
                android:textSize="14sp"
                android:background="@null"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
        </LinearLayout>
        <View
            android:background="#F2F2F2"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/etPassword"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@null"
                android:maxLength="20"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:padding="12dp"
                android:singleLine="true"
                android:textColor="#FF8B8C91"
                android:textColorHint="#FF8B8C91"
                android:textSize="14sp" />
            <ImageView
                android:id="@+id/imEys"
                android:src="@mipmap/biyan"
                android:layout_width="15dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <View
            android:background="#F2F2F2"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/tvRetrieve"
            android:gravity="center"
            android:text="忘记密码？"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/txt_lv8"
            android:layout_width="wrap_content"
            android:layout_height="40dp"/>

        <TextView
            android:id="@+id/tvLogin"
            android:text="登 录"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_20"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="登录即表明同意"
                android:textSize="10sp"
                android:textColor="@color/txt_33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvYonghu"
                android:text="《用户协议》"
                android:textSize="10sp"
                android:textColor="@color/main_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvYinsi"
                android:text="《隐私政策》"
                android:textSize="10sp"
                android:textColor="@color/main_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:text="还没有账号？"
                android:textColor="@color/txt_lv8"
                android:layout_width="wrap_content"
                android:layout_height="40dp"/>
            <TextView
                android:id="@+id/tvRegister"
                android:gravity="center"
                android:text="注册"
                android:textColor="@color/main_color"
                android:layout_width="wrap_content"
                android:layout_height="40dp"/>
        </LinearLayout>

        <TextView
            android:text="选择登录方式"
            android:textColor="@color/txt_66"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imWeChat"
                android:src="@mipmap/sanfangweixin"
                android:layout_width="41dp"
                android:layout_height="41dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
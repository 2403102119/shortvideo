<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="11dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/riIcon"
            android:src="@mipmap/touxiang"
            android:scaleType="fitXY"
            app:riv_oval="true"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <LinearLayout
            android:layout_marginLeft="11dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvName"
                android:text="用户名称"
                android:textColor="@color/txt_33"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvcompetitionName"
                android:text="来源：首届星洲社区舞蹈大赛 >"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/txt_66"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <cn.jzvd.JzvdStd
        android:id="@+id/jzVideo"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="13dp"
        android:layout_width="match_parent"
        android:layout_height="198dp"/>
    <TextView
        android:id="@+id/tvTitle"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:text="视频标题"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
         <ImageView
             android:src="@mipmap/pinglun"
             android:layout_width="wrap_content"
             android:layout_height="18dp"/>
        <TextView
            android:id="@+id/tvcommentCount"
            android:text="0"
            android:textSize="11sp"
            android:textColor="#A7A7A7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@mipmap/dianzan"
            android:layout_marginLeft="26dp"
            android:layout_width="wrap_content"
            android:layout_height="18dp"/>
        <TextView
            android:id="@+id/tvcollectCount"
            android:text="0"
            android:textSize="11sp"
            android:textColor="#A7A7A7"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@mipmap/fenxiang"
            android:layout_marginLeft="26dp"
            android:layout_width="wrap_content"
            android:layout_height="18dp"/>
        <TextView
            android:id="@+id/tvshareCount"
            android:text="0"
            android:textSize="11sp"
            android:textColor="#A7A7A7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
  <View
      android:layout_marginTop="16dp"
      android:background="#F6F6F6"
      android:layout_width="match_parent"
      android:layout_height="8.5dp"/>

</LinearLayout>
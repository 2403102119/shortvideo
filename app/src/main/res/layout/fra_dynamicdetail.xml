<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.core.widget.NestedScrollView
        android:layout_marginBottom="110dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_margin="11dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/riIcon"
                        android:scaleType="fitXY"
                        app:riv_oval="true"
                        android:src="@mipmap/touxiang"
                        android:layout_width="28dp"
                        android:layout_height="28dp"/>
                    <LinearLayout
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tvTitle"
                            android:text="用户昵称"
                            android:textColor="@color/txt_33"
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tvTime"
                            android:layout_marginTop="7dp"
                            android:text="2020.11.24   14:00"
                            android:textSize="11sp"
                            android:textColor="@color/txt_99"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tvGuanzhu"
                        android:text="互相关注"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:background="@drawable/guanzhu"
                        android:layout_width="80dp"
                        android:layout_height="27dp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tvConten"
                    android:layout_marginTop="15dp"
                    android:text="小姐姐的嗓子是天使吻过的吗？好漂亮啊~"
                    android:textSize="12sp"
                    android:textColor="@color/colorBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>
            <TextView
                android:id="@+id/tvPinglun"
                android:layout_marginTop="15dp"
                android:text="共计188条评论"
                android:textSize="13sp"
                android:textColor="@color/txt_33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rycomment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="67dp">
            <TextView
                android:text="评论 〉"
                android:textColor="@color/txt_33"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/riCommentIcon"
                android:src="@mipmap/touxiang"
                android:scaleType="fitXY"
                app:riv_oval="true"
                android:layout_marginLeft="7dp"
                android:layout_width="28dp"
                android:layout_height="28dp"/>
            <TextView
                android:id="@+id/tvCommentName"
                android:text="桑娜啊~"
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="11dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:paddingRight="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/etComment"
                android:hint="节奏的魅力，全被你洞悉~"
                android:textSize="13sp"
                android:textColor="@color/txt_33"
                android:paddingLeft="10dp"
                android:background="@drawable/jingdiansousuo"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="33dp"/>
            <TextView
                android:id="@+id/tvSent"
                android:text="评论"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:textColor="@color/txt_66"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
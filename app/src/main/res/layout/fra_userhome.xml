<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent">
    <ImageView
        android:src="@mipmap/imageerror"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="48dp"
        android:layout_marginRight="11dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/login_20"
        android:layout_width="59dp"
        android:layout_height="22dp">
         <ImageView
             android:src="@mipmap/sixin_bai"
             android:layout_width="12dp"
             android:layout_height="wrap_content"/>
        <TextView
            android:text="私信"
            android:layout_marginLeft="3dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llTitle"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imFinish"
            android:padding="16dp"
            android:src="@mipmap/fanhui"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/llTitle"
        android:background="@drawable/homepagebg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginTop="21dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="54dp"
                android:layout_height="54dp">
                <ImageView
                    android:src="@mipmap/yuan"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <com.makeramen.roundedimageview.RoundedImageView
                    android:src="@mipmap/touxiang"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_width="53dp"
                    android:layout_height="53dp"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_marginLeft="37dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/llFans"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="2"
                            android:textColor="@color/txt_33"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="粉丝"
                            android:textSize="13sp"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/txt_66"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/llAttention"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="92"
                            android:layout_marginLeft="25dp"
                            android:textColor="@color/txt_33"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="关注"
                            android:textSize="13sp"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/txt_66"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:gravity="center"
                        android:text="互相关注"
                        android:textSize="13sp"
                        android:background="@drawable/bianjiziliao"
                        android:textColor="@color/colorBlack"
                        android:layout_width="147dp"
                        android:layout_height="25dp"/>
                    <TextView
                        android:gravity="center"
                        android:text="屏蔽此人"
                        android:layout_marginLeft="20dp"
                        android:textSize="13sp"
                        android:background="@drawable/bianjiziliao"
                        android:textColor="@color/colorBlack"
                        android:layout_width="81dp"
                        android:layout_height="25dp"/>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <TextView
            android:text="张寒希"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="13dp"
            android:textSize="18sp"
            android:textColor="@color/txt_33"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="生活很苦，但你很甜呐~"
            android:textColor="@color/txt_66"
            android:textSize="13sp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_marginLeft="13dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="男"
                android:gravity="center"
                android:textSize="11sp"
                android:textColor="@color/txt_66"
                android:background="@drawable/homepagelable"
                android:layout_width="40dp"
                android:layout_height="18dp"/>
            <TextView
                android:text="29岁"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textSize="11sp"
                android:textColor="@color/txt_66"
                android:background="@drawable/homepagelable"
                android:layout_width="40dp"
                android:layout_height="18dp"/>
            <TextView
                android:text="河南郑州市"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textSize="11sp"
                android:textColor="@color/txt_66"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/homepagelable"
                android:layout_width="wrap_content"
                android:layout_height="18dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/llLike"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvLike"
                        android:text="喜欢"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <View
                        android:id="@+id/viLike"
                        android:layout_marginTop="10dp"
                        android:background="@color/main_color"
                        android:layout_width="30dp"
                        android:layout_height="2dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llwork"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvWork"
                        android:text="作品"
                        android:textColor="@color/txt_66"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <View
                        android:id="@+id/viWork"
                        android:layout_marginTop="10dp"
                        android:background="@color/space"
                        android:layout_width="30dp"
                        android:layout_height="2dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llDynamic"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvDynamic"
                        android:text="动态"
                        android:textColor="@color/txt_66"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <View
                        android:id="@+id/viDynamic"
                        android:layout_marginTop="10dp"
                        android:background="@color/space"
                        android:layout_width="30dp"
                        android:layout_height="2dp"/>
                </LinearLayout>

            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
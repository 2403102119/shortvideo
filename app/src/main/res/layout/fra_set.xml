<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/llVersoncode"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="57dp">
        <TextView
            android:text="版本更新"
            android:textColor="@color/txt_33"
            android:textSize="14sp"
            android:layout_marginLeft="12dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvverson"
            android:text="V1.0"
            android:textColor="@color/txt_99"
            android:textSize="13sp"
            android:layout_marginRight="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginRight="12dp"
            android:src="@mipmap/jiantou_zuo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llClean"
        android:layout_marginTop="0.5dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="57dp">
        <TextView
            android:text="清除缓存"
            android:textColor="@color/txt_33"
            android:textSize="14sp"
            android:layout_marginLeft="12dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvCacheData"
            android:text="0MB"
            android:textColor="@color/txt_99"
            android:textSize="13sp"
            android:layout_marginRight="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginRight="12dp"
            android:src="@mipmap/jiantou_zuo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvLogout"
        android:layout_marginTop="50dp"
        android:text="退出登录"
        android:textSize="15sp"
        android:textColor="#FF5556"
        android:gravity="center"
        android:background="@drawable/tuichudenglu"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
</LinearLayout>
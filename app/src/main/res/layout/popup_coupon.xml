<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_all"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#55000000"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_all_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/popup_coupon_drawab"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text=""
                android:gravity="center_horizontal"
                android:textColor="#333333"
                android:textSize="16sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/im_close"
                android:src="@mipmap/guanbi"
                android:padding="2dp"
                android:layout_marginRight="3dp"
                android:layout_width="25dp"
                android:layout_height="25dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/ri_icon"
                app:riv_oval="true"
                android:src="@mipmap/touxiang"
                android:scaleType="centerCrop"
                android:layout_width="36dp"
                android:layout_height="36dp"/>
            <LinearLayout
                android:layout_marginLeft="15dp"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_name"
                    android:text="用户昵称"
                    android:textColor="#989895"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_marginTop="7sp"
                    android:text="2002-05-29  10:45"
                    android:textSize="11sp"
                    android:textColor="#989895"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_content"
                    android:layout_marginTop="13.5dp"
                    android:text="Lorem Ipsum Lorem Ipsum"
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/etPinglun"
                android:textColor="@color/txt_33"
                android:textSize="14sp"
                android:gravity="top"
                android:layout_marginLeft="10dp"
                android:hint="节奏的魅力，全被你洞悉~"
                android:background="@drawable/pinglun_bk"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:minHeight="30dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvPinglun"
                android:text="评论"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:textColor="@color/main_color"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
